<div class="container">
  <% if session[:user_id]%>
    <h2>POGEN</h2>
    <form method="Post" action="/poems/haiku">
      <%Book.all.each do |book| %>
        <input type="radio" name="book_id" value=<%=book.id%>/><%=book.title%>
        <input name="authenticity_token" type="hidden" value= "token_value" />
      <%end%>
      <input type="text" name="haiku_key" />
      <input type="submit" value="Create!" />
    </form>

    <h3> upload a text </h3>
      <%= form_tag '/upload', :multipart => true do %>
        <label for="file">Upload text File</label> <%= file_field_tag "file" %>
        <%= label_tag "Title"%>
        <%= text_field_tag "title"%>
        <%= label_tag "Author"%>
        <%= text_field_tag "author"%>
        <%= submit_tag %>
      <% end %>
    <%end%>
<%= session[:user_id] if session[:user_id]%>

